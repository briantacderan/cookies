<div id="main-content">

  <div id="sign-up-section">
    <div id="banner">
      <div class="space" id="first"></div>
        <div class="container">
          <%= image_tag "cookie_3.jpg", class: "desktop" %>
          <%= image_tag "pink-chip.png", id: "parallaxOne", class: "mobile" %>
        </div>
        <div class="space"></div>
      </div>
      <div id="banner-right">
        <div class="container">
          <div class="content">
            <h1>MADE TO ORDER</h1>
            <p>every cookie baked with <strong>hella love</strong></p>
            <%= link_to "ORDER HERE", new_order_path, id: "button" %>
          </div>
        </div>
      </div>
    </div>

    <div id="bulletin-section"
         style="background: url(<%= image_url "white-stripes.svg" %>); 
                background-color: #F5EEE1;">
      <div id="bulletin-left">
          
        <%= @chips.each do |chip| %>
            <div class="post">
              <%= image_tag chip.image, class: "desktop" %>
              <%= image_tag chip.wide, class: "mobile" %>
              <div class="content">
                <h4><%= chip.name %></h4>
                <p><%= chip.description %></p>
                <%= link_to "ORDER", new_order_path %>
              </div>
            </div>
        <% end %>
          
      </div>
      <div id="bulletin-right">
        <div class="parallax">
          <%= image_tag "cookie_1.jpg", id: "parallaxTwo" %>
        </div>
      </div>
    </div>

    <div id="newsletter-section">
      <div class="container">
        <div class="content">
          <h1>subscribe to our mailing list</h1>
          <span>Get on our member list and never miss out on new flavors and promotions or click on the  <strong> heart</strong>at the top of the page and follow us on @instagram</span>
        </div>
        <div class="button">
          <input type="text" 
                 class="form-control" 
                 placeholder="Email address" 
                 aria-label="Email address" />
          <span>
            <button type="button">Subscribe</button>
          </span>
        </div>
      </div>
    </div>
    
</div>
