<div id="main-content">

  <div id="sign-up-section">
    <div id="banner">
      <div class="space" id="first"></div>
        <div class="container">
          <img class="desktop" 
               src="/assets/cookie_3.jpg" />
          <img id="parallaxOne" 
               class="mobile" 
               src="/assets/cookie_4_wide.jpg" />
        </div>
        <div class="space"></div>
      </div>
      <div id="banner-right">
        <div class="container">
          <div class="content">
            <h1>made to order</h1>
            <p>every cookie baked with <strong>hella love</strong></p>
            <%= link_to "ORDER HERE", new_order_path, :html => { :id => "button" } %>
          </div>
        </div>
      </div>
    </div>

    <div id="bulletin-section">
      <div id="bulletin-left">
        <div id="information" class="container">
        </div>
      </div>
      <div id="bulletin-right">
        <div class="parallax">
          <img id="parallaxTwo" 
               src="/assets/cookie_1.jpg" />
        </div>
      </div>
    </div>

    <div id="newsletter-section">
      <div class="container">
        <div class="content">
          <h1>subscribe to our newsletter</h1>
          <span>Join our monthly newsletter and never miss out on new stories and promotions or click on the  <strong> heart</strong>at the top of the page and follow us on @instagram</span>
        </div>
        <div class="button">
          <input type="text" 
                 class="form-control" 
                 placeholder="Email address" 
                 aria-label="Email address" />
          <span>
            <button type="button">Subscribe</button>
          </span>
        </div>
      </div>
    </div>
    
</div>
